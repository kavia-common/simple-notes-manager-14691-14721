---
import { API } from "../lib/api";
import { setAuth } from "../lib/auth";
const { mode } = Astro.props as { mode: 'login' | 'register' };
---
<div class="card" style="max-width: 480px; margin: 40px auto; padding: 20px;">
  <h2 style="margin:0 0 12px">{mode === 'login' ? 'Welcome back' : 'Create your account'}</h2>
  <form id="auth-form" style="display:grid; gap:12px">
    <div>
      <label for="email">Email</label>
      <input id="email" type="email" placeholder="you@example.com" required />
    </div>
    <div>
      <label for="password">Password</label>
      <input id="password" type="password" placeholder="••••••••" required />
    </div>
    {mode === 'register' && (
      <div>
        <label for="name">Name (optional)</label>
        <input id="name" type="text" placeholder="Your name" />
      </div>
    )}
    <button type="submit" class="btn" style="width:100%">{mode === 'login' ? 'Sign in' : 'Create account'}</button>
  </form>
  <div style="margin-top:12px; text-align:center">
    {mode === 'login' ? (<a href="/register">Need an account? Register</a>) : (<a href="/login">Have an account? Sign in</a>)}
  </div>
</div>

<script>
  import { API } from "../lib/api";
  import { setAuth } from "../lib/auth";

  function wireAuth() {
    const form = document.getElementById('auth-form');
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const email = (document.getElementById('email') as HTMLInputElement).value.trim();
      const password = (document.getElementById('password') as HTMLInputElement).value;
      const name = (document.getElementById('name') as HTMLInputElement | null)?.value?.trim();

      let res;
      if ((Astro as any).props?.mode === 'login') {
        res = await API.login(email, password);
      } else {
        res = await API.register(email, password, name || undefined);
      }
      if (res.success && res.data) {
        setAuth(res.data.token, res.data.user);
        window.location.href = "/notes";
      } else {
        alert(res.error || 'Authentication failed');
      }
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', wireAuth);
  } else {
    wireAuth();
  }
</script>
